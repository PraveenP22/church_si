<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/topImage"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp300"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/login_top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/us"
        android:layout_marginStart="28dp"
        android:text="Mobile Number"
        android:textColor="@color/black"
        android:textSize="@dimen/dp16"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topImage"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/usernameTxLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_marginStart="@dimen/dp25"
        android:layout_marginEnd="@dimen/dp35"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="342dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/us"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/trans"
        android:backgroundTint="@color/teal_200"
        app:boxStrokeWidth="0dp"
        app:boxBackgroundColor="@color/trans"
        app:boxCornerRadiusBottomEnd="@dimen/dp5"
        app:boxCornerRadiusBottomStart="@dimen/dp5"
        app:boxCornerRadiusTopEnd="@dimen/dp5"
        app:boxCornerRadiusTopStart="@dimen/dp5"
        android:gravity="center"
        app:hintEnabled="false"
        app:hintAnimationEnabled="false"


        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/username"
            android:backgroundTint="@color/teal_700"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="359dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            android:padding="0dp"
            android:hint="Enter Your Mobile Number"
            android:textColorHint="@color/black"
            />


    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/ps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="@dimen/dp14"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameTxLay" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:id="@+id/pwll"
        android:layout_marginStart="@dimen/dp25"
        android:layout_marginEnd="@dimen/dp35"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ps"
        android:layout_marginTop="@dimen/dp10"
        app:boxStrokeWidth="0dp"
        app:boxBackgroundColor="@color/teal_700"
        app:boxCornerRadiusBottomEnd="@dimen/dp5"
        app:boxCornerRadiusBottomStart="@dimen/dp5"
        app:boxCornerRadiusTopEnd="@dimen/dp5"
        app:boxCornerRadiusTopStart="@dimen/dp5"
        app:hintEnabled="false"
        app:hintAnimationEnabled="false"
        app:passwordToggleEnabled="true"
        app:endIconTint="@color/white"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/password"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="359dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="0dp"
            android:hint="Enter Your Password"
            android:textColorHint="@color/black"
            android:inputType="textPassword"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="525dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pwll"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginStart="@dimen/dp32"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not a member?"
        android:id="@+id/notmem"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="525dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pwll"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginEnd="@dimen/dp32"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_register"
        android:text="Register Here"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="@dimen/dp14"
        android:layout_marginEnd="@dimen/dp32"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="544dp"
        app:layout_constraintTop_toBottomOf="@id/notmem"/>


    <ImageView
        android:layout_width="@dimen/dp120"
        android:layout_height="@dimen/dp80"
        android:id="@+id/btn_login"
        android:src="@drawable/login_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/txt_register"
        android:layout_marginTop="@dimen/dp20"

        />

</androidx.constraintlayout.widget.ConstraintLayout>